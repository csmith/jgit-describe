<?xml version="1.0" encoding="UTF-8"?>
<project name="git-describe" default="jar" basedir=".">
  <path id="java.lib.path">
    <fileset dir="lib">
      <include name="*.jar"/>
    </fileset>
  </path>
  <target name="build">
    <mkdir dir="bin"/>
    <javac destdir="bin" source="1.7" encoding="UTF-8" debug="on" classpathref="java.lib.path" includeAntRuntime="true">
      <src path="src"/>
      <include name="org/mdonoughe/JGitDescribeTask.java"/>
    </javac>
  </target>
  <target name="jar" depends="build">
    <mkdir dir="dist"/>
    <jar destfile="dist/jgit-describe.jar">
      <fileset dir="bin">
        <include name="**/*.class"/>
      </fileset>
    </jar>
  </target>
  <target name="clean" >
    <delete dir="dist"/>
    <delete dir="bin"/>
  </target>
</project>
